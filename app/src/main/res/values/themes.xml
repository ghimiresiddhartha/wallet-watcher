<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.Theme.Neumorphism" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_scrim</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
    </style>

    <style name="AppTheme" parent="Platform.Theme.Neumorphism">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="CustomShapeToolbarAppearance">
        <item name="neumorph_cornerFamily">oval</item>
    </style>

    <style name="CustomShapeBodyAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSizeTopLeft">14dp</item>
        <item name="neumorph_cornerSizeTopRight">14dp</item>
        <item name="neumorph_cornerSizeBottomLeft">14dp</item>
        <item name="neumorph_cornerSizeBottomRight">14dp</item>
    </style>

</resources>
